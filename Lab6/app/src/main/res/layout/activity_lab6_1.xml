<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.jiwon.lab6.lab6_1">

    <EditText
        android:id = "@+id/txtData"
        android:layout_width = "match_parent"
        android:layout_height = "180dp"
        android:layout_margin = "10dp"
        android:background="#55dddddd"
        android:padding = "10dp"
        android:gravity="top"
        android:hint = "Enter some lines of data here..."
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/writeSDFile"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="1. WRITE SD FILE"/>
    <Button
        android:id="@+id/clearScreen"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="2. CLEAR SCREEN"/>
    <Button
        android:id="@+id/readSDFile"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="3. READ SD FILE"/>
    <Button
        android:id="@+id/finishApp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="4. FINISH APP"/>
</LinearLayout>