<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="e.jiwon.myapplication.MainActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_frag1"
            android:text = "TAB1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_frag2"
            android:text="TAB2"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/framelayout_for_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id = "@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="e.jiwon.myapplication.Fragment1"
            android:background = "#ffffff" />
        <fragment
            android:id = "@+id/fragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="e.jiwon.myapplication.Fragment2"
            android:background = "#ffffff"/>
    </FrameLayout>
</LinearLayout>